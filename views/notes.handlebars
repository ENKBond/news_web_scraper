<div class="container">
    <div class = "row text-center align-items-center" id="title-row">
      <div "col align-middle">
        <h2>Notes</h2>
        <br>
      </div>
    </div>
   
  <div class="row">
    <div class="col-6">
      <form>
        <div>
          <h4>{{data.title}}</h4>
        </div>
        <div class="form-group">
          <label for="noteTitle">Title</label>
          <input class="form-control" id="noteTitle" type="text">
        </div>
        <div class="form-group">
          <label for="noteBody">Comment</label>
          <textarea class="form-control" id="noteBody" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-info" id="saveNote" data-id="{{data._id}}">Submit</button>
        <button type="button" class="btn btn-secondary" id="cancelNote">Cancel</button>
      </form>
    </div>

    <div class="col-6">
      <div class="card">
        <h4 class="card-header">Previous Comments</h4>
          <div class="card-body">

            {{#if data.note}}
              {{#each data.note}}
                  <button data-id={{this._id}} id="deleteNote" class="btn btn btn-danger " style="float:right" type="button">Delete</button>
                  <h5 class="card-title">{{this.title}}</h5>
                  <p>{{this.body}}</p>
                  <hr>
              {{/each}}  

              {{else}}
              <h4>There are no comments yet on this article</h4>
            {{/if}}
          </div>
      </div>
    </div>

  </div>

</div>
